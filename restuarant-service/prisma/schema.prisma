generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

// ðŸ‘‡ LINKS to Auth Service User.id!
model Restaurant {
  id          String   @id @default(uuid())
  name        String
  address     String
  phone       String?
  ownerId     String   // ðŸ‘ˆ Foreign key to User.id (Auth Service!)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  menuItems   MenuItem[]
  // No @relation - we don't own User table!
}

// ðŸ‘‡ Menu Items for each Restaurant
model MenuItem {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Float
  imageUrl    String?
  restaurantId String
  
  restaurant  Restaurant @relation(fields: [restaurantId], references: [id])
  createdAt   DateTime  @default(now())
}