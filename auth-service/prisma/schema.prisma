generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  userType  String   @default("CUSTOMER")
  // other userTypes are "RESTAURANT_OWNER" , "DELIVERY_PARTNER","ADMIN"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}