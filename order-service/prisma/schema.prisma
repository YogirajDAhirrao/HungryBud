generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id           String       @id @default(uuid())
  customerId   String       // from Auth Service
  restaurantId String       // from Restaurant.id (this service)
  deliveryId   String?      // assigned later
  totalAmount  Float
  status       String       @default("PLACED")
  items        OrderItem[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model OrderItem {
  id            String     @id @default(uuid())
  orderId       String
  menuItemId    String     // from Restaurant Service
  restaurantId  String     // redundant but useful for decoupling
  quantity      Int        @default(1)
  price         Float      // snapshot of price
  order         Order      @relation(fields: [orderId], references: [id])
  createdAt     DateTime   @default(now())
}
